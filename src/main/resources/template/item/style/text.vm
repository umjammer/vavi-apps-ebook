@charset "utf-8";
@namespace "http://www.w3.org/1999/xhtml";

/** 共通 テキスト用スタイル */
@page {
margin: ${pageMargin[0]} ${pageMargin[1]} ${pageMargin[2]} ${pageMargin[3]};
}
body {
margin: 0;
padding: 0;
display: block;
color: #000;
font-size: ${fontSize}%;
line-height: ${lineHeight};
vertical-align: baseline;
}
/** 縦書き テキスト用スタイル */
html.vrtl {
margin: ${bodyMargin[0]} ${bodyMargin[1]} ${bodyMargin[2]} ${bodyMargin[3]};
padding: 0;
writing-mode: vertical-rl;
-webkit-writing-mode: vertical-rl;
-epub-writing-mode: vertical-rl;
-epub-line-break: strict;
line-break: strict;
-epub-word-break: normal;
word-break: normal;
}


/** 太字、ゴシック */
#if (${boldUseGothic})
.vrtl .b,
#end
.vrtl .gtc {
font-family: '@ＭＳ ゴシック','@MS Gothic',sans-serif;
}
#if (${gothicUseBold})
.gtc,
#end
.b { font-weight: bold; }
.i { font-style: italic; }

/** 外字フォント */
#foreach(${gaijiInfo} in ${vecGaijiInfo})
@font-face {font-family:"${gaijiInfo.ClassName}"; src:url(../gaiji/${gaijiInfo.FileName});}
.${gaijiInfo.ClassName} {font-family:"${gaijiInfo.ClassName}";}
#end

/** 横書き テキスト用スタイル */

html.hltr {
margin: ${bodyMargin[0]} ${bodyMargin[1]} ${bodyMargin[2]} ${bodyMargin[3]};
padding: 0;
writing-mode: horizontal-tb;
-webkit-writing-mode: horizontal-tb;
-epub-writing-mode: horizontal-tb;
-epub-line-break: strict;
line-break: strict;
-epub-word-break: normal;
word-break: normal;
}

/** 太字、ゴシック */
#if (${boldUseGothic})
.hltr .b,
#end
.hltr .gtc {
font-family: 'ＭＳ ゴシック','MS Gothic',sans-serif;
}
#if (${gothicUseBold})
.gtc,
#end
.hltr .b { font-weight: bold; }
.hltr .i { font-style: italic; }
